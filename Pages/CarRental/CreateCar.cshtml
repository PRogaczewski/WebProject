@page
@model TestIdentity.Pages.CarRental.CreateCarModel
@{
}

<h1>Add a new car</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="car.Name" class="control-label"></label>
                <input asp-for="car.Name" class="form-control" />
                <span asp-validation-for="car.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="car.Model" class="control-label"></label>
                <input asp-for="car.Model" class="form-control" />
                <span asp-validation-for="car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="car.Price" class="control-label"></label>
                <input asp-for="car.Price" class="form-control" />
                <span asp-validation-for="car.Price" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <h4 class="my-4 h4 secondary-heading">Select city</h4>
                    <select asp-for="city.Id" class="browser-default custom-select">
                        <option value="">Select city</option>
                        @foreach (var item in Model.cities)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Cars">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


